@model VarlikYönetimi.Core.Entities.AdvanceRequest

@{
    ViewData["Title"] = "Avans Talebi Düzenle";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Avans Talebi Düzenle</h4>
            <a asp-action="Index" class="btn btn-light">Listeye Dön</a>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Talep Tutarı</label>
                            <div class="input-group">
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                                <span class="input-group-text">₺</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DesiredDate" class="form-label">İstenilen Tarih</label>
                            <input asp-for="DesiredDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DesiredDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Belge Yükle (Opsiyonel)</label>
                            <input type="file" name="Document" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                            <div class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Desteklenen dosya formatları: PDF, JPG, JPEG, PNG
                                <br>
                                <i class="fas fa-exclamation-triangle"></i> Maksimum dosya boyutu: 10 MB
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 