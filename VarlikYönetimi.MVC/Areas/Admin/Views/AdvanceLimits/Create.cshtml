@model VarlikYönetimi.Core.Entities.AdvanceLimit

@{
    ViewData["Title"] = "Yeni Avans Limiti";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-plus-circle me-2"></i>Yeni Avans Limiti
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label asp-for="DepartmentId" class="form-label fw-bold">
                                <i class="fas fa-building me-1"></i>Departman
                            </label>
                            <select asp-for="DepartmentId" class="form-select form-select-lg" 
                                    asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                                <option value="">-- Departman Seçiniz --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MinAmount" class="form-label fw-bold">
                                <i class="fas fa-lira-sign me-1"></i>Minimum Tutar
                            </label>
                            <div class="input-group">
                                <input asp-for="MinAmount" class="form-control form-control-lg" type="number" step="0.01" min="0" placeholder="0.00" />
                                <span class="input-group-text bg-light">₺</span>
                            </div>
                            <span asp-validation-for="MinAmount" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-4">
                            <label asp-for="MaxAmount" class="form-label fw-bold">
                                <i class="fas fa-lira-sign me-1"></i>Maksimum Tutar
                            </label>
                            <div class="input-group">
                                <input asp-for="MaxAmount" class="form-control form-control-lg" type="number" step="0.01" min="0" placeholder="0.00" />
                                <span class="input-group-text bg-light">₺</span>
                            </div>
                            <span asp-validation-for="MaxAmount" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times me-1"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 