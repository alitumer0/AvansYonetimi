@model VarlikYönetimi.MVC.Models.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Detayları";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kullanıcı Detayları</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Bilgileri</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Kullanıcı Adı</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Ad</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Soyad</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Aktif" : "Pasif")</dd>

                <dt class="col-sm-3">Roller</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.RoleNames)</dd>

                <dt class="col-sm-3">Oluşturulma Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                @if (Model.UpdatedAt.HasValue)
                {
                    <dt class="col-sm-3">Güncellenme Tarihi</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                }
            </dl>

            <div class="mt-3">
                <a href="@Url.Action("Edit", "Users", new { area = "Admin", id = Model.Id })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 